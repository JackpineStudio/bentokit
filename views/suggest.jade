 script(type="text/javascript").
 
  var userDetails = getUserDetails();
  var loggedIn = userDetails['loggedIn'];
  var userLabel = document.getElementById("usernameLabel");
  if(loggedIn) {
   userLabel.value = userDetails['username'];
  } else {
   userLabel.innerHTML = "";
  }	 
 
